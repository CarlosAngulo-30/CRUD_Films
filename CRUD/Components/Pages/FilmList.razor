@page "/filmlist"
@using BlazorCRUD.Model
@using Interfaces
@inject IFilmService FilmService

<h1 style="text-align: center;">Film list</h1>


<p>This page shows a list of all films</p>

@if (films ==null || !films.Any())
{
    <p>No films available.</p>
}
else
{
    <table class="table-custom">
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Description</th>
                <th>Release Date</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in films)
            {
                <tr>
                    <td>@film.Title</td>
                    <td>@film.Director</td>
                    <td>@film.Description</td>
                    <td>@film.ReleaseDate</td>
                    <td><a href="/film-details/@film.Id"><i>Edit</i></a></td>
                    <td><a href="/film-delete/@film.Id"><i>Delete</i></a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<Film> films;

    protected override async Task OnInitializedAsync()
    {
        try{
            films = await FilmService.GetAllFilms();
        }
        catch (Exception)
        {
            throw;
        }
    }
}
